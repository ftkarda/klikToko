<!DOCTYPE html>
<html lang="en">
<head>

  <%- include('./component/heading.ejs') -%>

</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">

    <div class="container px-4 px-lg-5">
      <a class="navbar-brand" href="/<%= id %>">Klik-Toko</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
              <li class="nav-item"><a class="nav-link active" aria-current="page" href="/<%= id %>">Home</a></li>
              <li class="nav-item"><a class="nav-link" href="<%= id %>/profile">Profile</a></li>
          </ul>
    
          <div class="col-md-6">
            <div class="header-search">
              <form>
                <input name="name" class="input" placeholder="Search here">
                <button type="submit" class="search-btn">Search</button>
              </form>
            </div>
          </div>

          <div class="d-flex justify-content-end">
            <a class="btn btn-danger" href="/login">Logout</a>
          </div>
    
          
      </div>
    </div>

  </nav>

<header class="bg-dark py-5">
  
  <%- include('./component/header.ejs') -%>

</header>

<section class="py-5">
  <div class="col mb-5" style="text-align: center;">
    <form action="">
      <a href="/<%= id %>"><button type="button" class="btn btn-outline-dark mt-auto"> All </button></a>
      <% dataCategory.forEach((el) => { %>
        <button name="categoryName" type="submit" class="btn btn-outline-dark mt-auto" value="<%= el.name %>"> <%= el.name %> </button>
      <% }); %>
    </form>
  </div>
  <div class="container px-4 px-lg-5 mt-5">
      <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">

          <% dataProduct.forEach((el) => { %>
               
          <div class="col mb-5">
              <div class="card h-100">
            
                  <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
            
                  <img class="card-img-top" src="<%= el.imageUrl %>" alt="..." />
                
                  <div class="card-body p-4">
                      <div class="text-center">
                      
                          <h5 class="fw-bolder"><%= el.name %></h5>
                          Harga Mulai dari 
                          <span class="text-muted text-decoration-line-through">Rp. 200.000</span>
                          Rp. 20.000 / 3000 Diamonds loh!
                      </div>
                  </div>
                  
                  <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                      <div class="text-center">
                        <a class="btn btn-outline-dark mt-auto" href="/product/<%= el.id %>">See Details</a>
                      </div>
                  </div>
              </div>
          </div>
          <% }); %>
      </div>
  </div>
</section>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</html>